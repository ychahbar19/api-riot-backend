generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid()) @map("_id")
  email        String   @unique
  password     String
  username     String?
  refreshToken String?  @unique
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  summoners Summoner[]

  @@map("users")
}

model Summoner {
  id            String   @id @default(cuid()) @map("_id")
  accountId     String   @unique
  puuid         String   @unique
  region        String
  server        String
  name          String
  profileIconId Int
  revisionDate  Int
  summonerLevel Int
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  userId String @map("userId")
  user   User   @relation(fields: [userId], references: [id])

  ranks Rank[]

  @@map("summoners")
}

model Rank {
  id           String   @id @default(cuid()) @map("_id")
  leagueId     String   @unique
  queueType    String
  tier         String
  rank         String
  leaguePoints Int
  wins         Int
  losses       Int
  hotStreak    Boolean
  veteran      Boolean
  freshBlood   Boolean
  inactive     Boolean
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  summonerId String   @map("summonerId")
  summoner   Summoner @relation(fields: [summonerId], references: [id])

  @@map("ranks")
}
